  "conversion_factors": {
    "solar_gw_to_ej_year": {
      "description": "Convert GW capacity to EJ/year generation",
      "capacity_factor": 0.20,
      "formula": "GW * 8760 * capacity_factor / 1000000 = EJ/year",
      "example": "100 GW * 8760 * 0.20 / 1000000 = 0.175 EJ/year"
    },
