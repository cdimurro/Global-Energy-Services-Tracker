{
  "metadata": {
    "description": "Policy acceleration factors by region and technology for energy transition modeling",
    "version": "2.5.0",
    "methodology": "Deployment multipliers based on announced policies, legislation, and historical implementation rates",
    "sources": [
      "US Inflation Reduction Act (IRA) 2022 - Clean energy tax credits and incentives",
      "EU Green Deal and Fit for 55 Package - 2030 climate targets",
      "EU REPowerEU Plan 2022 - Accelerated renewable deployment",
      "China 14th Five-Year Plan - Energy sector targets",
      "India Renewable Energy 2030 Target - 500 GW non-fossil",
      "Japan Green Growth Strategy - 2050 carbon neutrality",
      "IEA World Energy Outlook 2024 - Policy analysis",
      "BloombergNEF Policy Impact Analysis 2024"
    ],
    "last_updated": "2024-12-05",
    "notes": "Multipliers represent acceleration above business-as-usual deployment rates"
  },
  "scenario_effectiveness": {
    "description": "How effective policies are at achieving stated targets",
    "Conservative": {
      "multiplier": 0.6,
      "notes": "Assumes partial implementation, political headwinds, supply chain constraints"
    },
    "Baseline": {
      "multiplier": 1.0,
      "notes": "Assumes policies are implemented as announced"
    },
    "Optimistic": {
      "multiplier": 1.3,
      "notes": "Assumes policies exceeded with additional support, technology cost declines accelerate adoption"
    }
  },
